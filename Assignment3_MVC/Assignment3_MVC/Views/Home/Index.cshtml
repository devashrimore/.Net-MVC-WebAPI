@model IEnumerable<Assignment3_MVC.Models.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.Action("GetNews", new { category = "Sports" })

@Html.Action("GetNews", new { category = "Weather" })

@Html.Action("GetNews", new { category = "Stock" })

<h2>

    Viewing all accounts...

</h2>

@foreach (var a in Model)

{

    <p>

        Account Number: @a.AccountNumber

    </p>

    <p>

        Account Holder's Name: @a.AccountName

    </p>

    <p>

        Current Balance: @a.CurrentBalance.ToString("C")

    </p>

    @Html.ActionLink("Edit", "Edit", new { accno = a.AccountNumber }) <span>&nbsp;</span>

    @Html.ActionLink("Delete", "Delete", new { accno = a.AccountNumber })

    <hr />

}